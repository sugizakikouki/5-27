<div class="col-8 mx-auto mt-3">
    <div class="col-5 mx-auto">
        <h1>Editing Book</h1>
        
        <% if @book.errors.any? %>
            <%= @book.errors.count %>error prohibited this obj from being saved:
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
        
        <%= form_with model: @book do |f| %>
        
            <h4>Title</h4>
            <%= f.text_field :title %>
          
            <div class="my-2">
                <h4>Opinion</h4>
                <%= f.text_area :body %><br>
