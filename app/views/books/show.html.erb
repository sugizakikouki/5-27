<div class="container">
    <div class="row d-flex justify-content-between mt-5">
        <%= render 'users/list' %>
        <div class="col-7 float-right">
            <h2>Book detail</h2>
            <table class="table">
                
                <tr>
                    <td>
                        <%= link_to image_tag("no_image.jpg"), user_path(current_user) %><br>
                        <%= link_to current_user.name, user_path(current_user) %>
                    </td>
                    <td><%= link_to @book.title, book_path(@book.id) %></td>
                    <td><%= @book.body %></td>
                    <td class="btn btn-success btn-sm p-0 mt-2 mr-5" >
                        <%= link_to "Edit", edit_book_path, class: 'nav-link text-white' %>
                    </td>
                    <td class="btn btn-danger btn-sm p-0 mt-2 " >
                        <%= link_to "Destroy", books_path, class: 'nav-link text-white' %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>