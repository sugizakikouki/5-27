<div class="container">
    <div class="row d-flex justify-content-between mt-5">
        <%= render 'users/list', book: @book_new, user: @user %>
        <div class="col-7 float-right">
            <h2>Book detail</h2>
            <table class="table">
                <tr>
                    <td>
                        <%=link_to user_path(@book.user.id) do%>
                        <%=image_tag @book.user.get_profile_image(100,100)%><br>
                        <%= current_user.name %>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to book_path(@book.id) do %>
                            <%= @book.title %>
                        <% end %>
                    </td>
                    <td><%= @book.body %></td>
                    <td class="btn btn-success btn-sm p-0 mt-2 mr-5" >
                        <%= link_to "Edit", edit_book_path, class: 'nav-link text-white' %>
                    </td>
                    <td class="btn btn-danger btn-sm p-0 mt-2 " >
                        <% if @book.user == current_user %>
                            <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に削除しますか？" } class: 'nav-link text-white' %>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>