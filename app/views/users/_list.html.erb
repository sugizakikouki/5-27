<div class ="col-md-3">
      <% if book.errors.any? %>
    <%= book.errors.count %>errors prohibited this obj from being saved:
    <ul>
        <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
  <h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image %>
  <% else %>
    <%= image_tag 'no_image' %>
  <% end %>
  <table class="table">
    <tr>
      <th scope="col">name</th>
      <th scope="col"><%= user.name %></th>
    </tr>
    <tr>
      <th scope="col">introduction</th>
      <th scope="col"><%= user.introduction %></th>
    </tr>
  </table>
  <div class="btn btn-outline-secondary btn-sm" style="width: 100%;" role="button">
    <%= link_to edit_user_path(user.id), class: 'nav-link' do %>
    <i class="fas fa-user-cog" style="color: #808080;"></i>
    <% end %>
  </div>

  <h3>New book</h3>

  <%= form_with model: book, url: '/books', method: :post do |f| %>
  <div class="new-title">
    <h4>Title</h4>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="new-body">
    <h4>Body</h4>
    <p><%= f.text_area :body %></p>
  </div>

  <div>
    <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>